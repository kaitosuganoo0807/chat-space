.chat
  .header
    .left-header
      .left-header__title
        = @group.name
        .left-header__members
          Memberï¼š
          - @group.users.each do |user|
            .member
              = user.name
    .right-header
      .right-header__edit_btn
        = link_to edit_group_path(@group) do
          .right-header__edit
            Edit
  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', plaseholder: 'type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = fa_icon 'image', class: 'icon'
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'